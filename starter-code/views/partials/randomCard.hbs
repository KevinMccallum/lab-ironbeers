<div class="col-lg">
  <div class="card flex-wrap d-flex justify-content-around">
    <img class="card-img-top" src="{{this.image_url}}" alt=""
      style="width: 100px; height: 10%; align-self:center; margin-top:50px">
    <div class="card-body ">
      <h3 class="card-name">{{this.name}}</h3>
      <p class="card-text">{{this.tagline}}</p>
      <p class="card-text">{{this.description}}</p>
      <h5>Food Pairing</h5>
      <ul class="card-text">
        {{#each food_pairing}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>